{
  "name": "uv-universal-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build --modern",
    "build:single": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "ui": "vue ui",
    "deploy": "yarn build && yarn upload",
    "upload": "tar cvf dist.tar dist/ && scp dist.tar uv2020:/tmp/dist.tar && ssh -t uv2020 \"cd /srv/www/universal-village/ && sudo mv /tmp/dist.tar . && sudo rm -rf dist/ && sudo tar xvf dist.tar\"",
    "i18n:report": "vue-cli-service i18n:report --src './src/**/*.?(js|vue)' --locales './src/locales/**/*.json'"
  },
  "dependencies": {
    "axios-cache-adapter": "^2.4.1",
    "core-js": "^3.6.0",
    "filepond": "^4.11.0",
    "filepond-plugin-file-validate-size": "^2.2.0",
    "filepond-plugin-file-validate-type": "^1.2.4",
    "hash.js": "^1.1.7",
    "register-service-worker": "^1.6.2",
    "uuid": "^3.3.3",
    "vue": "^2.6.11",
    "vue-filepond": "^6.0.2",
    "vue-i18n": "^8.0.0",
    "vue-recaptcha": "^1.2.0",
    "vue-router": "^3.0.3",
    "vuelidate": "^0.7.4",
    "vuetify": "^2.1.15",
    "vuetify-google-autocomplete": "^2.0.0-beta.8",
    "vuex": "^3.1.2",
    "vuex-persistedstate": "^2.7.0"
  },
  "devDependencies": {
    "@kazupon/vue-i18n-loader": "^0.3.0",
    "@mdi/font": "^4.5.95",
    "@vue/cli-plugin-babel": "^4.1.1",
    "@vue/cli-plugin-eslint": "^4.1.1",
    "@vue/cli-plugin-pwa": "^4.1.1",
    "@vue/cli-service": "^4.1.1",
    "axios": "^0.19.0",
    "axios-extensions": "^3.0.6",
    "axios-mock-adapter": "^1.17.0",
    "babel-eslint": "^10.0.1",
    "cz-conventional-changelog": "3.0.2",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "git-describe": "^4.0.4",
    "jwt-decode": "^2.2.0",
    "sass": "^1.17.4",
    "sass-loader": "^7.3.1",
    "vue-cli-plugin-i18n": "^0.6.0",
    "vue-cli-plugin-vuetify": "^2.0.2",
    "vue-template-compiler": "^2.6.10",
    "vuetify-loader": "^1.4.3",
    "webpack": "^4.42.0"
  },
  "eslintConfig": {
    "root": true,
    "globals": { "GIT_VERSION": true },
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/recommended",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "comma-dangle": [
        "error",
        {
          "arrays": "always-multiline",
          "objects": "always-multiline",
          "imports": "never",
          "exports": "never",
          "functions": "never"
        }
      ],
      "semi": [
        "error",
        "always",
        {
          "omitLastInOneLineBlock": true
        }
      ],
      "camelcase": [
        "error"
      ],
      "no-console": "off"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
